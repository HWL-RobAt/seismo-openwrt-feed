get_ip_from_mac () {
        # e.g. "23:E1:5E  " (note the 2 spaces at the end)
        HEXNUM=$(ifconfig $1 | grep -o -e "[[:xdigit:]]*:[[:xdigit:]]*:[[:xdigit:]]*  $")
        # 23:E1 (just a helper)
        FIRST_TWO_HEX=${HEXNUM%?????}
        # 0x"5E  "
        HEX3=0x${HEXNUM#??????}
        # 0x23
        HEX1=0x${HEXNUM%????????}
        # 0xE1
        HEX2=0x${FIRST_TWO_HEX#???}
        # 10.x.x.x
        IP=$(printf $NETWORK."%d.%d.%d\n" $HEX1 $HEX2 $HEX3)
        echo $IP
}

